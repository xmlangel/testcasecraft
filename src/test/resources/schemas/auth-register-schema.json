{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "required": ["role", "name", "message", "email", "username"],
  "properties": {
    "role": {
      "type": ["string", "null"],
      "enum": ["ADMIN", "MANAGER", "User", "VIEWER", null]
    },
    "name": {
      "type": "string"
    },
    "message": {
      "type": "string",
      "anyOf": [
        { "pattern": "^User registered successfully$" },
        { "pattern": "^Username already exists$" }
      ]
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "username": {
      "type": "string"
    }
  },
  "additionalProperties": false
}
